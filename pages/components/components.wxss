/* pages/components/components.wxss */

.photo {
    height: 150px;
}

.ddclass {
    height: 80px;
}

.ddbutton {
    height: 80px;
    display: flex;
    padding-top: 35rpx;
    padding-left: 80rpx;
    position: absolute;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
  }
  
  .balance {
    font-size: 20px;
    margin-bottom: 20px;
  }
  
  .balance-label {
    font-weight: bold;
  }
  
  .balance-amount {
    color: #4CAF50;
    margin-left: 5px;
  }
  
  .recharge {
    width: 100%;
  }
  
  .recharge-button {
    width: 100%;
    background-color: #4CAF50;
    color: #FFFFFF;
  }
  
  .four {
    display: flex;
    justify-content: space-between;
    height: 80%;
    width: 80%;
    padding: 20px;
  }
  
  .left-column,
  .right-column {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .top-left-btn,
  .bottom-left-btn,
  .top-right-btn,
  .bottom-right-btn {
    width: 100px;
    height: 50px;
  }
  .input-container {
    padding: 10px 0;
  }
  .input {
    width: 100%;
    border-bottom: 1px solid #eee;
    padding: 5px 0;
    text-align: center;
  }